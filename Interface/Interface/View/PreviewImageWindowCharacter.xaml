<Window x:Class="Interface.View.PreviewImageWindowCharacter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PreviewImageWindowCharacter" Height="400" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.10*" />
            <RowDefinition Height="0.70*" />
            <RowDefinition Height="0.20*" />
        </Grid.RowDefinitions>
        <Label Content="Select an image to use it while creating the game." FontSize="15" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,0,0,0"/>
        <Label Grid.Row="1" Name="PreviewImageLabel" HorizontalAlignment="Center" VerticalAlignment="Center" Height="125" Width="125" Margin="0,0,0,50" Background="Magenta" MaxWidth="125" MaxHeight="125" />
        <Button Grid.Row="1" Name="PreviewImageButton" Content="Preview Image" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" Width="125" Height="45" Click="PreviewImageButton_Click" />
        <Button Grid.Row="3" Name="PreviewAccept" Content="Accept" Margin="0, 0 ,5 ,5" Width="110" Height="35" HorizontalAlignment="Right" VerticalAlignment="Bottom" IsEnabled="True" Click="PreviewAccept_Click" IsDefault="True" />
    </Grid>
</Window>
